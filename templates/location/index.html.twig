{% extends 'baseDashboard.html.twig' %}

{% block title %}Location index{% endblock %}
{% block pageName %}Location index{% endblock %}

{% block body %}

    <a class="btn btn-primary mb-3" href="{{ path('location_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Postal code</th>
                <th>City</th>
                <th>Country</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td style="text-transform: capitalize;">{{ location.name }}</td>
                <td style="text-transform: capitalize;">{{ location.address }}</td>
                <td>{{ location.postalcode }}</td>
                <td style="text-transform: capitalize;">{{ location.city }}</td>
                <td style="text-transform: capitalize;">{{ location.country }}</td>
                <td>{{ location.latitude }}</td>
                <td>{{ location.longitude }}</td>
                <td>
                    <a href="{{ path('location_edit', {'id': location.id}) }}">
                        <i 
                        class="modify far fa-edit"
                        style="color: green; cursor: pointer;"
                        ></i>
                    </a>
                    <a href="{{ path('location_delete', {'id': location.id}) }}">
                        <i
                        class="delete far fa-trash-alt"
                        style="color: red; cursor: pointer;"
                        ></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
