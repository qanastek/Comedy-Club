{% extends 'base.html.twig' %}

{% block title %}Hello ALafficheController!{% endblock %}

{% block body %}

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h1 style="font-family: 'Roboto', sans-serif; letter-spacing: 4px;">A L'AFFICHE</h1>

                <hr style="width: 80px;" align="left" size="50" class="hr1">

                <h4 style="font-family: 'Roboto', sans-serif; letter-spacing: 4px;">Bienvenue au Avignon Comedy Club. Venez d√©couvrir les sketchs d'humoristes amateurs et professionnel dans une ambiance chaleureuse.</h4>

                <br>
                <br>

                {% for event in events %}
                <div class="col-md-3 col-xs-6 col-sm-4" style="text-align: left; font-family: 'Roboto', sans-serif;">
                    <a href="{{ event.ticketUrl }}" target="_blank">
                        <img 
                            src="/uploads/events/{{ event.image }}"
                            class="img-fluid"
                            style="width: 10vw; height: 15vw; overflow: hidden; object-fit: cover;"
                        >
                        <p>
                            <b style="color: #fe8155;">{{ event.title }}</b>
                            <br>
                            {{ event.date ? event.date|date('d F Y') : 'UNKNOW' }}
                        </p>
                    </a>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>
</article>

{% endblock %}
