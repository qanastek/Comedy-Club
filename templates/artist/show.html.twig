{% extends 'baseDashboard.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ artist.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artist.description }}</td>
            </tr>
            <tr>
                <th>Facebook_url</th>
                <td>{{ artist.facebookUrl }}</td>
            </tr>
            <tr>
                <th>Twitter_url</th>
                <td>{{ artist.twitterUrl }}</td>
            </tr>
            <tr>
                <th>Instagram_url</th>
                <td>{{ artist.instagramUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('artist_index') }}">back to list</a>

    <a class="btn btn-danger" href="{{ path('artist_edit', {'id': artist.id}) }}">edit</a>

    {{ include('artist/_delete_form.html.twig') }}
{% endblock %}
