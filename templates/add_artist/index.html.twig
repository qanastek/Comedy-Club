{% extends 'baseDashboard.html.twig' %}

{% block title %}Hello AddArtistController!{% endblock %}

{% block pageName %}Add artist{% endblock %}

{% block body %}

<form method="POST" action="{{ path('add_artist') }}">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter the name" required>
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" rows="4" placeholder="Enter the description"></textarea>
    </div>

    <div class="form-group">
        <label for="facebook">Facebook URL</label>
        <input
            type="url"
            class="form-control"
            id="facebook"
            name="facebook"
            placeholder="https://www.facebook.com/zuck"
        >
    </div>

    <div class="form-group">
        <label for="instagram">Instagram URL</label>
        <input
            type="url"
            class="form-control"
            id="instagram"
            name="instagram"
            placeholder="https://www.instagram.com/zuck/"
        >
    </div>

    <div class="form-group">
        <label for="twitter">Twitter URL</label>
        <input
            type="url"
            class="form-control"
            id="twitter"
            name="twitter"
            placeholder="https://twitter.com/jack"
        >
    </div>
    
    <div class="form-group">
        <label for="image">Image</label>
        <input type="file" class="form-control-file" id="image" name="image" required>
    </div>

  <button type="submit" class="btn btn-primary">Login</button>

</form>
{% endblock %}
