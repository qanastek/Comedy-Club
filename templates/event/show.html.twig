    <div class="container">
        <div class="row" style="padding-top: 7%;">
            <div class="col-xs-12 col-sm-12 col-md-12">

                {% if is_granted('ROLE_USER') %}
                    <div style="padding-bottom: 3%;">
                        <a class="btn btn-primary" href="{{ path('event_index') }}">back to list</a>

                        <a class="btn btn-primary" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

                        <a class="btn btn-primary" href="{{ path('event_delete', {'id': event.id}) }}">delete</a>
                    </div>
                {% endif %}

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ event.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ event.title }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ event.description }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ event.prix }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>{{ event.image }}</td>
                        </tr>
                        <tr>
                            <th>Ticket_url</th>
                            <td>{{ event.ticketUrl }}</td>
                        </tr>
                        <tr>
                            <th>Seats</th>
                            <td>{{ event.seats }}</td>
                        </tr>
                        <tr>
                            <th>Artists</th>
                            <td>
                                {% for artist in event.artists %}
                                    {{ artist }}
                                {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>

{% endblock %}
