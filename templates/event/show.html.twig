{% extends 'baseEvent.html.twig' %}

{% block title %}Event{% endblock %}
{% block pageName %}Event{% endblock %}

{% block body %}

    <div class="banner-background">

        <div class="container" style="bottom: -40px; left: 12vw; position: absolute; top: 4vh;">
            <div class="row">

                <div class="col-xs-12 col-sm-12 col-md-6" style="width: 37vw; height: 53vh">
                    <img class="img-responsive banner-img" src="/uploads/events/{{ event.image }}" alt="Nom du spectacle">
                </div>

                <div class="col-xs-12 col-sm-12 col-md-6 text-left text-banner" style="position: relative; color: #fff;">
                    <h1 class="text-uppercase" style"height: auto;">{{ event.title }}</h1>

                    <p class="text-uppercase p-banner">{{ event.date ? event.date|date('l d F Y') : '00H00' }}</p>
                    <p class="text-uppercase p-banner">{{ event.date ? event.date|date('H:i') : '00H00' }}</p>
                    <p class="text-capitalize p-banner">
                        {% for artist in event.artists %}
                            {{ artist }}
                        {% endfor %}
                    </p>

                    <br>

                    <a href="{{ event.ticketUrl }}" target="_blank" class="btn btn-primary btn-lg">RÃ©server mon billet</a>
                </div>
            </div>
        </div>
        
    </div>

